                @Html.DisplayNameFor(model => model.ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPieOfTheWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>

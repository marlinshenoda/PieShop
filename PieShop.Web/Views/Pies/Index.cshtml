                @Html.DisplayFor(modelItem => item.ImageThumbnailUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPieOfTheWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SugarLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
